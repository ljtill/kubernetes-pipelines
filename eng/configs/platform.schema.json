{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "https://github.com/ljtill/pipelines/blob/main/eng/configs/platform.schema.json",
    "type": "object",
    "required": [
        "services",
        "clusters"
    ],
    "properties": {
        "services": {
            "type": "object",
            "required": [
                "subscription",
                "resourceGroup",
                "name",
                "location",
                "properties"
            ],
            "properties": {
                "subscription": {
                    "type": "string"
                },
                "resourceGroup": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "location": {
                    "type": "string"
                },
                "properties": {
                    "type": "object",
                    "required": [
                        "clientAddress"
                    ],
                    "properties": {
                        "clientAddresses": {
                            "type": "array",
                            "items": {}
                        }
                    }
                }
            }
        },
        "clusters": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "subscription",
                    "resourceGroup",
                    "name",
                    "location",
                    "properties"
                ],
                "properties": {
                    "subscription": {
                        "type": "string"
                    },
                    "resourceGroup": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "location": {
                        "type": "string"
                    },
                    "properties": {
                        "type": "object",
                        "required": [
                            "country"
                        ],
                        "properties": {
                            "country": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}